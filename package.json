{
  "name": "heimdall-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:auth": "playwright test auth.spec.ts",
    "test:e2e:posts": "playwright test posts.spec.ts",
    "test:e2e:tags": "playwright test tags.spec.ts",
    "test:e2e:comments": "playwright test comments.spec.ts"
  },
  "dependencies": {
    "@ant-design/icons": "5.4.0",
    "@ant-design/pro-components": "2.7.0",
    "@hookform/resolvers": "3.9.0",
    "@tanstack/react-query": "5.45.1",
    "@uiw/react-md-editor": "4.0.4",
    "ahooks": "3.8.0",
    "antd": "5.20.6",
    "axios": "1.7.7",
    "dayjs": "1.11.13",
    "katex": "0.16.11",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.52.0",
    "react-markdown": "9.0.1",
    "rehype-highlight": "7.0.0",
    "rehype-katex": "7.0.0",
    "remark-gfm": "4.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/antd": "^0.12.32",
    "@types/katex": "0.16.7",
    "@types/node": "20.14.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.13.0",
    "@typescript-eslint/parser": "7.13.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "prettier": "3.3.3",
    "typescript": "5.5.4"
  }
}
