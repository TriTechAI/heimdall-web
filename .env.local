# Heimdall Web Environment Variables
# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1/admin
NEXT_PUBLIC_APP_NAME=Heimdall Admin Dev

# API Timeout
API_TIMEOUT=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Upload Configuration
NEXT_PUBLIC_MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Markdown Editor Configuration
NEXT_PUBLIC_ENABLE_LATEX=true
NEXT_PUBLIC_ENABLE_MERMAID=true